{
  "name": "@shelf/jest-mongodb",
  "version": "1.0.0",
  "description": "Run your tests using Jest & MongoDB in Memory server",
  "license": "MIT",
  "repository": "shelfio/jest-mongodb",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "test": "jest"
  },
  "keywords": [
    "jest",
    "mongodb",
    "mongodb local",
    "jest preset",
    "jest environment"
  ],
  "dependencies": {
    "cwd": "0.10.0",
    "mongodb": "3.2.3",
    "mongodb-memory-server": "5.0.2"
  },
  "devDependencies": {
    "@shelf/eslint-config": "0.2.2",
    "eslint": "5.16.0",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0"
  },
  "jest": {
    "preset": "./jest-preset.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
