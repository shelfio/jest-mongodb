{
  "name": "@shelf/jest-mongodb",
  "version": "5.2.2",
  "description": "Run your tests using Jest & MongoDB in Memory server",
  "keywords": [
    "jest",
    "jest environment",
    "jest preset",
    "mongodb",
    "mongodb local"
  ],
  "repository": "shelfio/jest-mongodb",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "files": [
    "jest-preset.js",
    "lib/"
  ],
  "scripts": {
    "build": "rm -rf lib/ && pnpm run build:types && babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts'",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "lint": "pnpm run lint:ci --fix",
    "lint:ci": "eslint . --quiet",
    "prepack": "pnpm run build",
    "test": "jest",
    "test:repl": "MONGO_MEMORY_SERVER_FILE=jest-mongodb-config-repl.js jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm run type-check --watch"
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write"
    ],
    "*.{ts,js,json}": [
      "eslint --fix"
    ]
  },
  "babel": {
    "extends": "@shelf/babel-config/backend"
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "preset": "./jest-preset.js"
  },
  "dependencies": {
    "debug": "4.4.1",
    "mongodb-memory-server": "10.1.4"
  },
  "devDependencies": {
    "@babel/cli": "7.28.3",
    "@babel/core": "7.28.3",
    "@jest/environment": "29.7.0",
    "@shelf/babel-config": "3.0.0",
    "@shelf/eslint-config": "4.4.0",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.1.0",
    "@types/jest": "29.5.14",
    "@types/node": "22",
    "eslint": "9.32.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-node": "29.7.0",
    "lint-staged": "16.1.2",
    "mongodb": "6.16.0",
    "prettier": "3.6.2",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "jest-environment-node": "28.x || 29.x",
    "mongodb": "3.x.x || 4.x || 5.x || 6.x"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  }
}
